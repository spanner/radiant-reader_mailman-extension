    .actions
      = button_to t("edit"), edit_admin_reader_settings_url, :method => :get
    =t("reader_mailman_extension.mailing_list_configuration")
  %p.ruled
    = show_config 'reader.mailman.list_name'
  %p.ruled
    = show_config 'reader.mailman.username'
